@page "/reset-password"
@using JewShop.Shared.Dtos
@using JewShop.Client.Services
@inject IAuthService AuthService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4 border-0" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <div class="text-center mb-4">
             <div class="bg-success bg-opacity-10 text-success rounded-circle d-inline-flex p-3 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-shield-lock-fill" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.777 11.777 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7.159 7.159 0 0 0 1.048-.625 11.775 11.775 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.541 1.541 0 0 0-1.044-1.263 62.467 62.467 0 0 0-2.887-.87C9.843.266 8.69 0 8 0zm0 5a1.5 1.5 0 0 1 .5 2.915l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99A1.5 1.5 0 0 1 8 5z"/>
                </svg>
            </div>
            <h3 class="fw-bold">Đặt Lại Mật Khẩu</h3>
        </div>
        
        <EditForm Model="resetModel" OnValidSubmit="HandleReset">
            <DataAnnotationsValidator />
            
            <div class="mb-3">
                <label class="form-label text-muted small fw-bold">Token xác thực</label>
                <InputText @bind-Value="resetModel.Token" class="form-control bg-light" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold small text-secondary">Mật khẩu mới</label>
                <InputText type="password" @bind-Value="resetModel.NewPassword" class="form-control" placeholder="******" />
                <ValidationMessage For="@(() => resetModel.NewPassword)" />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold small text-secondary">Nhập lại mật khẩu</label>
                <InputText type="password" @bind-Value="resetModel.ConfirmPassword" class="form-control" placeholder="******" />
                <ValidationMessage For="@(() => resetModel.ConfirmPassword)" />
            </div>
            
            <button type="submit" class="btn btn-success w-100 py-2 fw-bold shadow-sm">Xác nhận thay đổi</button>
        </EditForm>
    </div>
</div>

@code {
    private ResetPasswordRequest resetModel = new();

    protected override void OnInitialized()
    {
       
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = uri.Query;

        if (!string.IsNullOrEmpty(query) && query.Contains("token="))
        {
            var parts = query.Split("token=");
            if (parts.Length > 1)
            {
                resetModel.Token = parts[1].Split('&')[0];
            }
        }
    }

    private async Task HandleReset()
    {
        var success = await AuthService.ResetPassword(resetModel);
        if(success)
        {
            await JS.InvokeVoidAsync("alert", "Đổi mật khẩu thành công! Vui lòng đăng nhập lại.");
            Nav.NavigateTo("/login");
        }
        else 
        {
            await JS.InvokeVoidAsync("alert", "Lỗi: Token hết hạn hoặc không hợp lệ.");
        }
    }
}