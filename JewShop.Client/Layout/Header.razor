@using JewShop.Client.Services
@inject CartService CartService
@implements IDisposable

<header class="main-header">
    <div class="wrapper">
        <div class="left">
            <a href="/">
                <img src="assets/images/logo.svg" alt="Logo" class="logo" />
            </a>
            <span class="brand-name">JewShop</span>

        </div>

        <div class="center">
            <nav class="nav-menu">
                <div class="category-dropdown">
                    <button class="category-btn">
                        <span>📂 Danh mục</span>
                        <span class="arrow">▼</span>
                    </button>
                    <div class="category-menu">
                        <a href="/products?category=Rings" class="category-item">💍 Nhẫn</a>
                        <a href="/products?category=Earrings" class="category-item">👂 Bông tai</a>
                        <a href="/products?category=Necklaces" class="category-item">📿 Dây chuyền</a>
                        <a href="/products?category=Bracelets" class="category-item">🔗 Vòng tay</a>
                        <a href="/products?category=Pendants" class="category-item">🏷️ Mặt dây</a>
                        <a href="/products?category=Anklets" class="category-item">⛓️ Lắc chân</a>
                        <a href="/products?category=Accessories" class="category-item">✨ Phụ kiện</a>
                    </div>
                </div>
                <a href="/products">Tất cả sản phẩm</a>
            </nav>
        </div>

        <div class="right">
            <div class="search-box">
                <input placeholder="Search" />
            </div>

            <a href="/cart" class="cart-icon">
                <img src="assets/icons/shopping.svg" class="cart-img" />
                @if (cartCount > 0)
                {
                    <span class="cart-badge">@cartCount</span>
                }
            </a>

            <div class="avatar-menu">
                <AuthorizeView>
                    <Authorized>
                        <a href="/profile" class="avatar-link">
                            <img src="assets/icons/avatar.svg" class="avatar" />
                        </a>
                        
                        <div class="dropdown">
                            <div class="dropdown-header">
                                Xin chào, <strong>@context.User.Identity?.Name</strong>
                            </div>
                            
                            @if (context.User.IsInRole("admin"))
                            {
                                <a href="/admin" class="dropdown-item">Quản trị viên</a>
                            }
                            
                            <a href="/profile" class="dropdown-item">Hồ sơ cá nhân</a>
                            <div class="dropdown-divider"></div>
                            <button class="dropdown-item text-danger" @onclick="BeginLogout">Đăng xuất</button>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn-login">Đăng nhập</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</header>

@code {
@inject IAuthService AuthService
@inject NavigationManager Navigation

    private int cartCount = 0;

    protected override async Task OnInitializedAsync()
    {
        cartCount = await CartService.GetCartCount();
        CartService.OnChange += async () => 
        {
            cartCount = await CartService.GetCartCount();
            await InvokeAsync(StateHasChanged);
        };
    }

    private async Task BeginLogout()
    {
        await AuthService.Logout();
        Navigation.NavigateTo("/login", true);
    }

    public void Dispose()
    {
        // No need to unsubscribe lambda, but good practice to have Dispose
    }
}